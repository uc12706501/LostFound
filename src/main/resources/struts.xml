<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- Index -->
	<package name="myPackage" extends="struts-default">

		<default-action-ref name="index" />

		<action name="index" class="com.lkk.lostfound.IndexAction">
			<result>/jsp/index.jsp</result>
		</action>

		<action name="helloWorld" class="helloWorldAction">
			<result name="input">/jsp/index.jsp</result>
			<result>/jsp/helloWorld.jsp</result>
		</action>

	</package>

	<!-- Admin Home -->
	<package name="admin-home" namespace="/admin" extends="struts-default">
		<action name="index">
			<result name="success">/WEB-INF/jsp/admin/index.jsp</result>
		</action>

	</package>

	<!-- Admin Announcement -->
	<package name="admin-anno" namespace="/admin/announcement"
		extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack">
		</default-interceptor-ref>

		<action name="index"
			class="com.lkk.lostfound.action.admin.announcement.IndexAction">
			<result name="success">/WEB-INF/jsp/admin/announcement/index.jsp
			</result>
		</action>

		<action name="create"
			class="com.lkk.lostfound.action.admin.announcement.CreateAction">
			<result name="input">/WEB-INF/jsp/admin/announcement/create.jsp
			</result>
		</action>

		<action name="confirmCreate"
			class="com.lkk.lostfound.action.admin.announcement.CreateAction"
			method="confirm">
			<result type="redirectAction">index</result>
			<result name="input">/WEB-INF/jsp/admin/announcement/create.jsp
			</result>
		</action>

		<action name="getImage"
			class="com.lkk.lostfound.action.admin.announcement.GetImageAction">
			<result name="success" type="stream">
				<param name="contentType">image</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
	</package>
</struts>
