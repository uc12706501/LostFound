<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- Home -->
	<package name="home" namespace="/" extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"></default-interceptor-ref>
		<action name="index" class="com.lkk.lostfound.action.home.IndexAction">
			<result name="success">/WEB-INF/jsp/index.jsp</result>
		</action>
	</package>

	<!-- User -->
	<package name="user" namespace="/user" extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"></default-interceptor-ref>
		<action name="logon">
			<result name="success">/WEB-INF/jsp/user/logon.jsp</result>
		</action>
	</package>

	<!-- PickedItem -->
	<package name="pickedItem" namespace="/pickeditem" extends="struts-default">

		<default-interceptor-ref name="paramsPrepareParamsStack"></default-interceptor-ref>

		<action name="details"
			class="com.lkk.lostfound.action.pickedItem.DetailsAction">
			<result>/WEB-INF/jsp/pickeditem/details.jsp</result>
		</action>

		<action name="create" class="com.lkk.lostfound.action.pickedItem.CreateAction">
			<interceptor-ref name="paramsPrepareParamsStack">
				<param name="validation.validateAnnotatedMethodOnly">true</param>
			</interceptor-ref>
			<result name="input">/WEB-INF/jsp/pickeditem/create.jsp</result>
		</action>

		<action name="save" class="com.lkk.lostfound.action.pickedItem.CreateAction"
			method="save">
			<result name="success" type="redirectAction">
				<param name="actionName">details</param>
				<param name="id">${id}</param>
			</result>
			<result name="input">/WEB-INF/jsp/pickeditem/create.jsp</result>
		</action>
	</package>

	<!-- Message -->
	<package name="message" namespace="/message" extends="struts-default">
		<default-action-ref name="paramsPrepareParamsStack"></default-action-ref>
		<action name="save" class="com.lkk.lostfound.action.message.SaveMessageAction">
			<result name="success" type="redirectAction">
				<param name="actionName">details</param>
				<param name="namespace">/pickeditem</param>
			</result>
			<result name="input">/WEB-INF/jsp/pickeditem/details.jsp</result>
		</action>
	</package>


	<!-- Admin Home -->
	<package name="admin-home" namespace="/admin" extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"></default-interceptor-ref>
		<action name="index">
			<result name="success">/WEB-INF/jsp/admin/index.jsp</result>
		</action>
	</package>

	<!-- Admin Announcement -->
	<package name="admin-anno" namespace="/admin/announcement"
		extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack">
		</default-interceptor-ref>

		<action name="index"
			class="com.lkk.lostfound.action.admin.announcement.IndexAction">
			<result name="success">/WEB-INF/jsp/admin/announcement/index.jsp
			</result>
		</action>

		<action name="create"
			class="com.lkk.lostfound.action.admin.announcement.CreateAction">
			<result name="input">/WEB-INF/jsp/admin/announcement/create.jsp
			</result>
		</action>

		<action name="confirmCreate"
			class="com.lkk.lostfound.action.admin.announcement.CreateAction"
			method="confirm">
			<result type="redirectAction">index</result>
			<result name="input">/WEB-INF/jsp/admin/announcement/create.jsp
			</result>
		</action>

		<action name="getImage"
			class="com.lkk.lostfound.action.admin.announcement.GetImageAction">
			<result name="success" type="stream">
				<param name="contentType">image</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
	</package>
</struts>
